<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adama.response.PlusButtonActivity">
//push
    <TextView
        android:id="@+id/writefood"
        android:layout_width="402dp"
        android:layout_height="29dp"
        android:text="Enter your food down below"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/enterfood"
        android:layout_alignStart="@+id/enterfood" />

    <EditText
        android:id="@+id/enterfood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20dp"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="93dp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/writefood"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Complete"
        android:textColor="@android:color/white"
        android:layout_alignRight="@+id/writeamount"
        android:layout_alignEnd="@+id/writeamount"
        android:layout_alignParentBottom="true" />

    <EditText
        android:id="@+id/enteramount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName|number"
        android:text="" />

    <TextView
        android:id="@+id/writeamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the amount of consumed food below"
        android:textSize="18dp"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/enteramount"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/writecalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Enter the calorie value for the food below"
        android:layout_below="@+id/enteramount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <EditText
        android:id="@+id/entercalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName|number"
        android:text=""
        android:textSize="20dp"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="93dp"
        android:layout_below="@+id/writecalorie"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/viewfoodlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Calorie list"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/writeamount"
        android:layout_alignStart="@+id/writeamount" />


</RelativeLayout>
