<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adama.response.PlusButtonActivity">
//push
    <TextView
        android:id="@+id/writefood"
        android:layout_width="402dp"
        android:layout_height="29dp"
        android:text="Enter your food down below and the amount"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <EditText
        android:id="@+id/enterfood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20dp"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="93dp"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/writefood"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Complete"
        android:textColor="@android:color/white"
        android:layout_alignLeft="@+id/enterfood"
        android:layout_alignStart="@+id/enterfood"
        android:layout_alignRight="@+id/enterfood"
        android:layout_alignEnd="@+id/enterfood" />

    <Button
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/enterfood"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp" />

</RelativeLayout>
